														return "(o, r) => new Item(r.Last().Int + o.Int)";

													case "Expression<Func<TOuter, TInner, TResult>>":
														return "(o, i) => new Item(o.Int - i.Int * 3)";

													case "Expression<Func<TSource, TElement>>":
